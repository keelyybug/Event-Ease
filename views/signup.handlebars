 <section class="text-light d-flex justify-content-center m-5">
  <div class="card" style="width: 30rem; height: auto;">
    <div class="d-flex flex-column justify-content-center align-items-center card-body">
      <h2 class="text-white login-title pb-3">Sign Up</h2>
      <form id="signupform" class="form login-form d-flex flex-column flex-wrap align-content-center">
        <div class="form-group m-2 d-flex flex-column">
          <label for="firstname-signup" class="text-white fs-6 mb-0">First Name</label>
          <input id="first-signup" name="firstname-signup" type="text" class="form-input" />

          <label for="lastname-signup" class="text-white fs-6 mb-0">Last Name</label>
          <input id="last-signup" name="lastname-signup" type="text" class="form-input" />

          <label for="username-signup" class="text-white fs-6 mb-0">Username</label>
          <input id="username-signup" name="username-signup" type="text" class="form-input" />

          <label for="email-signup" class="text-white fs-6 mb-0">Email</label>
          <input id="email-signup" name="email-signup" type="text" class="form-input" />

          <label for="password-signup" class="text-white fs-6 mb-0">Password</label>
          <input id="password-signup" name="password-signup" type="password" class="form-input" />
        </div>
        <div class="form-group m-2 d-flex flex-wrap justify-content-center">
          <button id="signup-form" type="submit" class="btn login-btn btn-primary">Signup!</button>
        </div>
        <div class="d-flex flex-wrap flex-column align-content-center align-items-center">
          <p class="text-white mb-0 mt-3">Already a member?</p>
          <a class="login-link" href="/login">Log in instead</a>
        </div>

      </form>
    </div>
  </div>
</section>

