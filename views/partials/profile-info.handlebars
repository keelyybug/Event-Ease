<div class="col-6 card m-5" style="width: 30rem; height: 20rem;">
  <div class="card-header text-center text-white d-flex justify-content-center">
    <h4 class="mb-4 event-title text-center d-flex flex-column"><a class="text-reset"
        href="/profile/single-event/{{id}}">{{event_title}}</a></h4>
  </div>
  <div class="col-6 align-self-center">
    <div>
       <h5>Description:</h5>
        <p>{{event_description}}</p>
        <h5>Event Date:</h5>
        <p class="">{{event_date}}</p>
      <button class="text-white btn start p-1 m-1 width-auto" data-id="{{id}}">DELETE</button>
      <button class=" text-white p-1 btn start m-1" type="button">
        <a class="text-reset" href="/rsvp">Attendees</a>
      </button>
      <button class="text-white btn start p-1 m-1" type="button">
        <a class="text-reset" href="/edit-event/{{id}}">Edit</a>
      </button>
    </div>
  </div>
</div>


<script src="/js/delete.js"></script>

