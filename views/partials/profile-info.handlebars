<div class="col-6 card m-5" style="width: 30rem; height: 25rem;">
  <div class="card-header text-center text-white d-flex justify-content-center">
    <h4 class="mb-4 event-title text-center d-flex flex-column"><a class="text-reset"
        href="/single-event/{{id}}">{{event_title}}</a></h4>
  </div>
  <div class="row text-white">
    <div>
       <h5>Description:</h5>
        <p>{{event_description}}</p>
        <h5>Event Date:</h5>
        <p class="">{{event_date}}</p>

        <button class="col text-white btn start p-1 m-1 width-auto delete-btn" id="delete" data-id="{{id}}">DELETE
        </button>

        <button class="col text-white p-1 btn start m-1" type="button">
        <a class="text-reset" href="/event/{{id}}/rsvp">Attendees</a>
        </button>

        <button class="col text-white btn start p-1 m-1" type="button">
        <a class="text-reset" href="/edit-event/{{id}}">Edit</a>
        </button>
    </div>
  </div>
</div>
