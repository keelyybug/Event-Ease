<div class="col-6 card m-5" style="width: 30rem; height: 20rem;">
    <div class="card-header text-center text-white">
        <h4 class="mb-4 event-title text-center d-flex flex-column"><a class="text-reset" href="/event/{{id}}">{{event_title}}</a></h4>
        <h5>Description:</h5>
        <p>{{event_description}}</p>
        <h5>Event Date:</h5>
        <p class="">{{event_date}}</p>
        <button type="submit" class="btn start btn-primary mt-3 mb-5"
            onclick="window.location.href = '/event/{{id}}/rsvp'">Respond</button>
    </div>
</div>
