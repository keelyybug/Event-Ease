<header>
    <nav class="navbar  navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="./">
                <img src="../images/logo-no-background.png" alt="logo" width="55" height="45">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon lines"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/#about">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="logout" href="/">log Out</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<section class="">
    <div>
        <div class="d-flex flex-column flex-wrap align-items-center">
            <h1 class="text-white">Welcome, {{user.first}} {{user.last}}!</h1>
            <button type="submit" class="btn start btn-primary mt-3 mb-5"
                onclick="window.location.href = '/new-event'">+ New Event</button>
        </div>
    </div>
</section>

{{#if logged_in}}

<section>
    <div class="container vh-100">
        <div class="row d-flex flex-wrap justify-content-center">
            <h3 class="text-white text-center">My Events</h3>
            <div class="text-white text-center d-flex flex-wrap justify-content-center">
            {{#each events as |event|}}
            {{> profile-info event}}
            {{/each}}
        </div>
    </div>
</section>

{{/if}}





<script src="../js/delete-event.js"></script>
<script src="../js/logout.js"></script>